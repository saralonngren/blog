p#notice = notice
.container
  .row
    .col-sm-12
      h2.index-title Oi! Seja Bem-vindo 👋🏻
.container.categories-container
  .row
    .col-sm-12
      h3.index-categories-title Estou escrevendo sobre:
      - @categories_with_posts.each do |category|
        a.badge.badge-pill.badge-info.category-pill href="#" = category

.container
  - @posts.each do |post|
    .posts
      a href=("#{post_path(id: post.id)}") =post.title
      p.subtitle-index= post.subtitle
      p.reading-time= "#{post.reading_time} min de leitura"
